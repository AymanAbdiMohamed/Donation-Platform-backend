# Flask
FLASK_ENV=production
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database (Railway provides DATABASE_URL automatically when you add a PostgreSQL plugin)
DATABASE_URL=postgresql+psycopg://user:password@host:5432/dbname

# CORS - set to your frontend URL (NO trailing slash)
# For production, set this to your exact frontend domain
# Example: https://donation-platform-frontend.onrender.com
CORS_ORIGINS=https://donation-platform-frontend.onrender.com

# M-Pesa Daraja (optional - leave blank to disable payment features)
MPESA_ENV=sandbox
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=174379
MPESA_PASSKEY=
MPESA_STK_CALLBACK_URL=
MPESA_TIMEOUT_URL=
